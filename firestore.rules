
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Aturan ini berlaku untuk semua dokumen ('{document=**}') di dalam database.
    // Ini memberikan izin baca dan tulis penuh kepada setiap pengguna yang
    // telah terautentikasi (request.auth != null).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
